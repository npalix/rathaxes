  keywordstyle=[2]{\color{blue}},
  sensitive=false,
  morecomment=[l][\color{rRed}]{//},
  morecomment=[l][\color{rRed}]{\#},
  morecomment=[s][\color{rRed}]{/*}{*/},
  morestring=[b][\color{rGreen}]",
  morestring=[b][\color{rGreen}]',
}

