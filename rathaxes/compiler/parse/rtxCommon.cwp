//      // AND     next char from being an alpha char. (or its a serial value)
//      [ #!ignore ![ [#noCase 'A'..'Z'] | rtx_serial_separator ] ]
//      #check(rtxNodeNumber(theValue, sInt))
    |
        #check(rtxNodeSerial(theValue))
        rtx_serial(theValue)
