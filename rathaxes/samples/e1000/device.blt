with Device, LKM
{
    template type   Device::AbstractDevice()
    {
        chunk   LKM::includes()
        {
            #include <linux/device.h>
        }

        decl   data_types()
        {
            struct device   data;
        }

        method   init()
        {
        }

        map
        {
            data:   ${self}->data;
        }
    }
}
